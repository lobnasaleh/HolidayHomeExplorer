@model IEnumerable<Villa_Web.Models.DTO.VillaDTO>

<div class="container p-4 border">

    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Villa List</h1>

        </div>
        <div class="col text-end pt-1">
            <a asp-controller="Villa" asp-action="CreateVilla" class="btn btn-outline-primary">Create New Villa<i class="bi bi-window-plus"></i></a>
        </div>


    </div>




<table class="table table-bordered table-hover">
    <thead>
    <th>Name</th>
    <th>Occupancy</th>
    <th>Price</th>
    <th>

    </th>

    </thead>
    <body>
        @foreach (var item in Model)
        {
            <tr>
        <td>@item.Name</td>
        <td>@item.Occupancy</td>
        <td>@item.Rate</td>
        <td>
            <a asp-controller="Villa" asp-action="UpdateVilla" asp-route-villaId="@item.Id" class="n=btn btn-success"><i class="bi bi-pencil-square"></i></a>
            <a asp-controller="Villa" asp-action="DeleteVilla" asp-route-villaId="@item.Id" class="n=btn btn-danger"><i class="bi bi-trash"></i></a>

       
        </td>
        </tr>
        }
    </body>

</table>
</div>