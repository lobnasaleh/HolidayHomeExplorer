@model IEnumerable<Villa_Web.Models.DTO.VillaNumberDTO>

<div class="container p-4 border">

    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Villa List</h1>

        </div>
        <div class="col text-end pt-1">
            <a asp-controller="VillaNumber" asp-action="CreateVillaNumber" class="btn btn-outline-primary">Create New Villa Number<i class="bi bi-window-plus"></i></a>
        </div>


    </div>


    <table class="table table-bordered table-hover">
        <thead>
        <th>Villa Name</th>
        <th>Villa Number</th>
     
        <th>

        </th>

        </thead>
        <body>
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.Villa.Name</td>

                <td>@item.VillaNo</td>
              
                <td>
                    <a asp-controller="VillaNumber" asp-action="UpdateVillaNumber" asp-route-villaNo="@item.VillaNo" class="n=btn btn-success"><i class="bi bi-pencil-square"></i></a>
                    <a asp-controller="VillaNumber" asp-action="DeleteVillaNumber" asp-route-villaNo="@item.VillaNo" class="n=btn btn-danger"><i class="bi bi-trash"></i></a>


                </td>
            </tr>
            }
        </body>

    </table>
</div>