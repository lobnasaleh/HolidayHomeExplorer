@model Villa_Web.Models.DTO.VillaCreateDTO
<!--lama el object ykoon bayz-->


<form asp-action="CreateVilla" asp-controller="Villa">


    <div class="container border-3 p-3">
        <h1 class="text-primary">Create Villa</h1>
        </hr>
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class=" col-2">
                <label asp-for="Name" class="control-label"></label>
            </div>
            <div class=" col-10 pb-3">
                <input asp-for="Name" class="form-control pt-2" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="col-2">

                <label asp-for="Details" class="control-label"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="Details" class="form-control pt-2" rows="5"></textarea>
                <span asp-validation-for="Details" class="text-danger"></span>
            </div>

            <div class=" col-2">
                <label asp-for="Rate" class="control-label"></label>
            </div>
            <div class=" col-10 pb-3">
                <input asp-for="Rate" class="form-control pt-2" />
                <span asp-validation-for="Rate" class="text-danger"></span>
            </div>

            <div class="col-2">

                <label asp-for="Occupancy" class="control-label"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Occupancy" class="form-control pt-2" />
                <span asp-validation-for="Occupancy" class="text-danger"></span>
            </div>

            <div class=" col-2">
                <label asp-for="Sqft" class="control-label"></label>
            </div>
            <div class=" col-10 pb-3">
                <input asp-for="Sqft" class="form-control pt-2" />
                <span asp-validation-for="Sqft" class="text-danger"></span>
            </div>

            <div class="col-2">

                <label asp-for="ImageUrl" class="control-label"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="ImageUrl" class="form-control pt-2" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>

            <div class="col-2">

                <label asp-for="Amenity" class="control-label"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="Amenity" class="form-control pt-2" rows="5"></textarea>
                <span asp-validation-for="Amenity" class="text-danger"></span>
            </div>
            <div class="col-5 offset-2">
                <a asp-action="Index" asp-controller="Villa" class="btn btn-primary form-control">Back</a> 
            </div>
            <div class="col-5 ">
                <input type="submit" asp-action="CreateVilla" asp-controller="Villa" class="btn btn-success form-control"/>
            </div>

        </div>





    </div>
</form>

@section scripts{
    <partial name="_ValidationScriptsPartial" />
}
