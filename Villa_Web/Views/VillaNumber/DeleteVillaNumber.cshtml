@model Villa_Web.Models.VM.VillaNumberDeleteVM
<!--lama el object ykoon bayz-->

<form asp-action="DeleteVillaNumber" asp-controller="VillaNumber">


    <div class="container border-3 p-3">
        <h1 class="text-primary">Delete Villa Number</h1>
        </hr>

        <input hidden asp-for="villaNumber.VillaNo"/>
        <div class="row">
           
            <div class=" col-2">
                <label asp-for="villaNumber.VillaNo" class="control-label"></label>
            </div>
            <div class=" col-10 pb-3">
                <input disabled asp-for="villaNumber.VillaNo" class="form-control pt-2" />
                   </div>

            <div class="col-2">

                <label asp-for="villaNumber.VillaId" class="control-label"></label>
            </div>
            <div class="col-10 pb-3">
                <select disabled asp-for="villaNumber.VillaId" asp-items="@Model.villaList" class="form-control pt-2">
                    <option disabled selected>--Select Villa--</option>
                </select>

                   </div>

            <div class="col-2">
                <label asp-for="villaNumber.SpecialDetails" class="control-label"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea disabled asp-for="villaNumber.SpecialDetails" class="form-control pt-2" rows="5"></textarea>
                 </div>
            <div class="col-5 offset-2">
                <a asp-action="Index" asp-controller="VillaNumber" class="btn btn-primary form-control">Back</a>
            </div>
            <div class="col-5 ">
                <input type="submit" value="Delete" asp-action="DeleteVillaNumber" asp-controller="VillaNumber" class="btn btn-success form-control" />
            </div>

        </div>





    </div>
</form>

@section scripts {
    <partial name="_ValidationScriptsPartial" />
}
